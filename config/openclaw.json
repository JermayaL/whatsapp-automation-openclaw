{
  "gateway": {
    "port": 18789,
    "host": "0.0.0.0",
    "auth": {
      "enabled": true,
      "token": "GENERATE_SECURE_TOKEN_HERE"
    }
  },

  "models": {
    "default": "anthropic/claude-sonnet-4-5-20250929",
    "providers": {
      "anthropic": {
        "apiKey": "${ANTHROPIC_API_KEY}"
      }
    }
  },

  "agents": {
    "list": [
      {
        "id": "filter",
        "name": "Filter Agent",
        "workspace": "~/.openclaw/workspace-filter",
        "model": "anthropic/claude-sonnet-4-5-20250929",
        "description": "Qualifies leads before human handover"
      },
      {
        "id": "human",
        "name": "Human Agent",
        "workspace": "~/.openclaw/workspace-human",
        "model": "anthropic/claude-sonnet-4-5-20250929",
        "description": "Main agent for qualified leads"
      }
    ],
    "defaults": {
      "heartbeat": {
        "every": "0m"
      },
      "session": {
        "ttl": "48h",
        "maxTurns": 30
      },
      "tools": {
        "allow": [
          "sessions_send",
          "sessions_list"
        ],
        "deny": [
          "bash",
          "file_*",
          "browser"
        ]
      }
    }
  },

  "bindings": [
    {
      "agentId": "filter",
      "priority": 100,
      "match": {
        "channel": "whatsapp",
        "peer": {
          "kind": "dm"
        }
      }
    },
    {
      "agentId": "human",
      "priority": 200,
      "match": {
        "channel": "whatsapp",
        "peer": {
          "kind": "dm",
          "id": "+31612345678"
        }
      }
    }
  ],

  "channels": {
    "whatsapp": {
      "dmPolicy": "pairing",
      "allowFrom": [
        "+31612345678"
      ],
      "selfChatMode": false,
      "capabilities": {
        "multiDevice": true,
        "reactions": true
      },
      "ackReaction": "üëç"
    }
  },

  "skills": {
    "spreadsheet-trigger": {
      "enabled": true,
      "googleSheetId": "${GOOGLE_SHEET_ID}",
      "googleCredsPath": "./google-credentials.json",
      "checkInterval": 30,
      "rateLimit": {
        "messagesPerMinute": 30,
        "delayBetweenMessages": 2000
      }
    }
  },

  "plugins": {
    "enabled": [
      "open-prose"
    ]
  },

  "workspace": {
    "path": "~/.openclaw/workspace",
    "skills": "~/.openclaw/workspace/skills"
  },

  "logging": {
    "level": "info",
    "format": "pretty",
    "destinations": [
      {
        "type": "file",
        "path": "~/.openclaw/logs/gateway.log"
      },
      {
        "type": "console"
      }
    ]
  },

  "health": {
    "enabled": true,
    "interval": "5m",
    "checks": [
      "gateway",
      "channels",
      "agents",
      "models"
    ]
  }
}
